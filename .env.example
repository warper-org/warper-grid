# ============================================
# DODO PAYMENTS CONFIGURATION
# ============================================
# Get these from: https://app.dodopayments.com/settings/api-keys

# API Key for server-side operations (keep secret!)
VITE_DODO_API_KEY=your_dodo_api_key_here

# Webhook Secret for verifying webhook signatures
VITE_DODO_WEBHOOK_SECRET=your_webhook_secret_here

# Environment: 'live_mode' or 'test_mode'
VITE_DODO_ENVIRONMENT=test_mode

# Your Product ID from Dodo Payments Dashboard
VITE_DODO_PRODUCT_ID=your_product_id_here

# ============================================
# LICENSE CONFIGURATION
# ============================================

# Secret key for signing/verifying license keys locally (min 32 chars)
# Generate with: openssl rand -hex 32
VITE_LICENSE_SECRET_KEY=your_license_secret_key_here_min_32_characters

# Grace period in days for license expiry warnings
VITE_LICENSE_GRACE_PERIOD_DAYS=7

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Application URL - Leave empty to auto-detect from window.location
# Only set this if you need to override (e.g., behind a proxy)
# VITE_APP_URL=https://your-domain.com

# Payment callback paths (appended to app URL automatically)
# These are hash routes, not full URLs
VITE_PAYMENT_SUCCESS_PATH=#payment-success
VITE_PAYMENT_CANCEL_PATH=#payment-cancelled
